# Proyecto
COMPOSE_PROJECT_NAME=homelab

# Zona horaria
TZ=Europe/Madrid

# Identidad usuario host (para imágenes linuxserver)
PUID=1000
PGID=1000

# Dominios internos (resuélvelos en tu DNS / hosts)
HEIMDALL_DOMAIN=dashboard.home.arpa
JELLYFIN_DOMAIN=jellyfin.home.arpa
IMMICH_DOMAIN=fotos.home.arpa
ADGUARD_DOMAIN=adguard.home.arpa
METRICS_DOMAIN=metrics.home.arpa
FILES_DOMAIN=files.home.arpa
UPTIME_DOMAIN=status.home.arpa
VAULT_DOMAIN=vault.home.arpa
PORTAINER_DOMAIN=docker.home.arpa
DUPLICATI_DOMAIN=backup.home.arpa
GRAFANA_DOMAIN=grafana.home.arpa
ADGUARD_BIND_IP=127.0.0.1

# Paths host (ajusta a tus rutas reales)
MEDIA_MOVIES_PATH=/mnt/media/movies
MEDIA_SERIES_PATH=/mnt/media/series
SYNC_DATA_PATH=/mnt/data/shared
IMMICH_LIBRARY_PATH=/mnt/photos/library

# Immich
IMMICH_TAG=release
IMMICH_ML=false
IMAGES_WORKERS=1
VIDEOS_WORKERS=1

# Base de datos (perfil photos)
PG_USER=immich
PG_DB=immich

# Cron backup Postgres (min hora día mes mesdia)
PG_BACKUP_CRON=0 3 * * *

# Watchtower (true para incluir servicio, false para quitarlo en compose)
ENABLE_WATCHTOWER=true

# Netdata/Uptime Kuma (monitoring profile)
NETDATA_CLAIM_TOKEN=
NETDATA_CLAIM_ROOMS=
NETDATA_CLAIM_URL=https://app.netdata.cloud

# File Browser (files profile)
FILEBROWSER_DB=/database/filebrowser.db
FILEBROWSER_SCOPE=/srv/data

# Tailscale (network/vpn profile)
# Obtener auth key en: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TAILSCALE_ROUTES=192.168.1.0/24

# Vaultwarden (security profile)
VAULTWARDEN_ADMIN_TOKEN=
# Generar token: openssl rand -base64 48

# Duplicati (backup profile)
BACKUP_SOURCE_PATH=/srv/data
DUPLICATI_BACKUP_PATH=/srv/backups/duplicati

# Grafana + InfluxDB (monitoring-advanced profile)
GRAFANA_PASSWORD=admin
GRAFANA_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource
INFLUX_USER=admin
INFLUX_PASSWORD=admin123
INFLUX_ORG=homelab
INFLUX_BUCKET=metrics

# Tailscale (network/vpn profile)
TAILSCALE_AUTHKEY=tskey-auth-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TAILSCALE_ROUTES=192.168.1.0/24
